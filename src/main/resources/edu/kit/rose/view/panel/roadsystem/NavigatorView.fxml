<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.shape.Circle?>
<?import javafx.scene.shape.Rectangle?>
<fx:root
        xmlns="http://javafx.com/javafx"
        xmlns:fx="http://javafx.com/fxml"
        type="Pane"
        prefWidth="75"
        prefHeight="130">
    <Circle
            centerX="37"
            centerY="37"
            radius="37"
            fill="lightgray"/>
    <Rectangle
            x="22"
            y="40"
            width="31"
            height="90"
            arcHeight="30"
            arcWidth="30"
            fill="lightgray"/>
    <Button
            fx:id="navigateToRightButton"
            layoutX="52"
            layoutY="27"
            minWidth="20"
            maxWidth="20"
            minHeight="20"
            maxHeight="20"
            style="-fx-background-color: transparent;">
        <graphic>
            <ImageView fx:id="navigateToRightIcon"/>
        </graphic>
    </Button>
    <Button
            fx:id="navigateToLeftButton"
            layoutX="3"
            layoutY="27"
            minWidth="20"
            maxWidth="20"
            minHeight="20"
            maxHeight="20"
            style="-fx-background-color: transparent;">
       <graphic>
           <ImageView fx:id="navigateToLeftIcon"/>
       </graphic>
    </Button>
    <Button
            fx:id="navigateToTopButton"
            layoutX="27.5"
            layoutY="3"
            minWidth="20"
            maxWidth="20"
            minHeight="20"
            maxHeight="20"
            style="-fx-background-color: transparent;">
        <graphic>
            <ImageView fx:id="navigateToTopIcon"/>
        </graphic>
    </Button>
    <Button
            fx:id="navigateToBottomButton"
            layoutX="27.5"
            layoutY="52"
            minWidth="20"
            maxWidth="20"
            minHeight="20"
            maxHeight="20"
            style="-fx-background-color: transparent;">
        <graphic>
            <ImageView fx:id="navigateToBottomIcon"/>
        </graphic>
    </Button>
    <Button
            fx:id="zoomInButton"
            layoutX="27.5"
            layoutY="80"
            minWidth="20"
            maxWidth="20"
            minHeight="20"
            maxHeight="20"
            style="-fx-background-color: #009682;">
        <shape>
            <Circle radius="20"/>
        </shape>
        <graphic>
            <ImageView fx:id="zoomInIcon"/>
        </graphic>
    </Button>
    <Button
            fx:id="zoomOutButton"
            layoutX="27.5"
            layoutY="105"
            minWidth="20"
            maxWidth="20"
            minHeight="20"
            maxHeight="20"
            style="-fx-background-color: #009682;">
    <shape>
        <Circle radius="20"/>
    </shape>
        <graphic>
            <ImageView fx:id="zoomOutIcon"/>
        </graphic>
    </Button>
</fx:root>
