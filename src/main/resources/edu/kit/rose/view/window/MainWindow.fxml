<?import javafx.scene.layout.BorderPane?>
<?import edu.kit.rose.view.panel.roadsystem.RoadSystemPanel?>
<?import edu.kit.rose.view.panel.segmentbox.SegmentBoxPanel?>
<?import edu.kit.rose.view.panel.problem.ProblemOverviewPanel?>
<?import edu.kit.rose.view.panel.hierarchy.HierarchyPanel?>
<?import javafx.scene.control.MenuItem?>
<?import javafx.scene.control.SeparatorMenuItem?>
<?import javafx.scene.control.Menu?>
<?import javafx.scene.control.MenuBar?>
<BorderPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml">
    <top>
        <MenuBar fx:id="menuBar">
            <Menu fx:id="project">
                <MenuItem fx:id="newProject"/>
                <MenuItem fx:id="loadProject"/>
                <MenuItem fx:id="exportProject"/>
                <MenuItem fx:id="saveProject"/>
                <MenuItem fx:id="saveProjectAs"/>
                <Menu fx:id="loadProjectBackup">
                    <MenuItem text="Backups will be inserted here"/>
                </Menu>
                <SeparatorMenuItem/>
            </Menu>
            <Menu fx:id="validation">
                <MenuItem fx:id="criteria"/>
            </Menu>
            <Menu fx:id="measurements">
                <MenuItem fx:id="measurementsOverview"/>
            </Menu>
            <Menu fx:id="language">
                <MenuItem fx:id="germanLanguage"/>
                <MenuItem fx:id="englishLanguage"/>
            </Menu>
            <Menu fx:id="help">
                <MenuItem fx:id="shortcuts"/>
                <MenuItem fx:id="tutorial" disable="true"/>
            </Menu>
        </MenuBar>
    </top>
    <left>
        <BorderPane>
            <top>
                <SegmentBoxPanel fx:id="segmentBoxPanel"/>
            </top>
            <bottom>
                <ProblemOverviewPanel fx:id="problemOverviewPanel"/>
            </bottom>
        </BorderPane>
    </left>
    <center>
        <RoadSystemPanel fx:id="roadSystemPanel"/>
    </center>
    <right>
        <HierarchyPanel fx:id="hierarchyPanel"/>
    </right>
</BorderPane>

