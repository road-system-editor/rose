<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Pane?>
<fx:root fx:id="parentContainer"
         xmlns="http://javafx.com/javafx"
         xmlns:fx="http://javafx.com/fxml" type="Pane">
    <HBox fx:id="layout" prefWidth="${parentContainer.width}"
          style="-fx-padding: 5; -fx-border-style: hidden; -fx-border-radius: 10; -fx-border-width: 0.5; -fx-border-color: grey">

        <Label fx:id="label"
               style="-fx-font-family: Arial; -fx-font-size: 14; -fx-pref-width: 120px; -fx-padding: 5px;"/>
    </HBox>
</fx:root>